<section class="product">
  <%= image_tag @product.featured_image, width: 100, height: 100 if @product.featured_image.attached? %>
</section>

<section class="product-info">
  <% cache @product do %>
    <h1><%= @product.name %></h1>
    <%= @product.description %>
  <% end %>

  <%= render "inventory", product: @product %>

  <p><%= link_to t(".back"),  products_path %></p>

  <% if authenticated? %>
    <%= link_to t(".edit"), edit_product_path(@product) %>
    <%= button_to t(".destroy"), @product, method: :delete, data: { turbo_confirm: t(".are_you_sure") } %>
  <% end %>
</section>
